{
  "compilerOptions": {
    "target": "ESNext",
    "module": "ESNext",
    "moduleResolution": "node",
    "strict": true,
    "declaration": true,
    "sourceMap": false,
    "outDir": "dist/esm",
    "declarationDir": "dist",
    "rootDir": "src",
    "removeComments": true,
    "importHelpers": true,
    "importsNotUsedAsValues": "remove",
    "isolatedModules": true,
    "allowSyntheticDefaultImports": true,
    "esModuleInterop": true,
    "forceConsistentCasingInFileNames": true,
    "skipLibCheck": true
  },
  "include": ["src"],
  "exclude": ["node_modules"]
}
